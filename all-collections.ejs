<%- include("partials/header") -%>

  <h1 class="mt-4">Collections</h1>
  <div class="row">
    <div class="col-2 mt-2">
      <ul class="nav nav-pills flex-column">

        <% for (const category of categories) { %>
          <li class="nav-item">
            <a class="nav-link all-buttons" href="/user/<%=username%>/collections/<%=category.link%>"><%=category.title%></a>
          </li>
        <% } %>

      </ul>
    </div>
    <div class="col-7 text-start">
      <% for (const item of items) { %>
        <button type="submit" class="item-button all-buttons item-button" id="<%=item.link%>">
          <img src="/<%=item.imagePath%>" width="45">
        </button>
      <% } %>
    </div>
    <div class="col-3">
      <div class="box hover-text p-3">
        <div id="item-info-stay">
        </div>
        <div id="item-info-hover">
        </div>

      </div>
    </div>
  </div>







<%- include("partials/footer") -%>
